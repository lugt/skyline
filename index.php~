class CustomInfo{
	
	public $id;
	public $na;
	public $memo;
	public $ettime;
	public $bal;
	public $con;
	public $rel;
	public $par;
	
	public function get_id($lid){
		$usb = new DB_Act("S","*","skyline_custom","`id` = ".$lid."  ");		
		if($usb->status == DB_Mod::$C_TRUE){
			// 成功
			if($usb->get == NULL || $usb->get == false){
				// 失败了	
				return false;
			}else{
				return $this->GLA($usb->get);
			}
		}else{
			// 不成功
			return false;
		}
	}
	
	public function set($a,$b){
		EC::A();
		$usb = new DB_Act("U"," `".$a."` =  ".$b." ","skyline_custom"," `id` = ".$this->id);
		if($usb->status == DB_Mod::$C_TRUE){
			// 成功	
			return true;
		}else{
			return false;	
		}
	}
	
	public function GLA($row){
		
			if(!isset($row) || !is_array($row)){
				return false;
			}
			
			if(!isset($row['name']) || !isset($row['memo']) ||
		!isset($row['parent']) || !isset($row['ettime']) || !isset($row['balance']) ||!isset($row['contact'])||!isset($row['relation']) || !isset($row['id']) ){
				return false;
			}
			
  		$this->id =  $row['id'];
  		$this->na =  $row['name'];
  		
  		$this->bal =  $row['balance'];
  		$this->rel =  $row['relation'];
		$this->ettime =  $row['ettime'];
		$this->con =  $row['contact'];
		$this->par = $row['parent'];
		$this->memo = $row['memo'];
		
		return true;
	}
	
	
		
}

class Mod_Custom{
	
	public static function showCustomAdd(){
		require_once("acts/custom_add.html");
	}
	
	public static function showCustomPanel(){
		require_once("acts/custom_panel.html");
	}	
	
	public static function Save_Custom(){
		
		if(!isset($_REQUEST['na']) || !isset($_REQUEST['com']) || !isset($_REQUEST['rel']) || !isset($_REQUEST['par']) || !isset($_REQUEST['memo'])){
			self::errp("您输入的信息不完整");
		}
		
		$na = Sec::NS($_REQUEST['na']);
		$memo = Sec::NS($_REQUEST['memo']);
		$com = Sec::NS($_REQUEST['com']);
		$rel = Sec::C($_REQUEST['rel']);
		$par = Sec::C($_REQUEST['par']);
		$usb = DB_custom($na,$memo,$com,$rel,$par);		
		if($usb->status != DB_Mod::$C_TRUE){
			// 出错误了
			self::errp("不能创立客户！" . base64_encode(json_encode($usb))); // 查询错误
		}else{
			self::suuc("客户",$usb—>get); // 查询错误
		}

	}
	
	public static function DB_custom(){
		$sql = "(`id`, `name`, `ettime`, `balance`, `contact`, `relation`, `parent`, `memo`)";
		$val = "(NULL, '".$na."', '".time()."', '0', '".$com."', '".$rel."', '".$par."', '".$memo."')";
		$usb = new DB_Act("I",$val,"skyline_custom",$sql);	
		return $usb;
	}
		
	
	
	public static function Get_CustomId(){
		$cid = NULL;
		if(isset($_REQUEST['cusId'])){
			$cid = $_REQUEST['cusId'];
		}
		$shh = new CustomInfo();
		if($cid != NULL && $shh->get_id($cid) == true){
			return $shh;
		}else{
			return NULL;
		}
		
	}
	
	
	public static function Get_Custom(){
		// 得到用户
		// Contact 
		if(isset($_REQUEST['data'])){
			$sememo = Sec::NS($_REQUEST['data']);
		}else{
			$sememo = NULL;
		}
		if(isset($_REQUEST['sj'])){
			$st = Sec::C($_REQUEST['sj']);
			if($st <= 0){
				$st = 0;
			}
		}else{
			$st = 0;
		}
		
		
		if(isset($_REQUEST['end'])){
			$end = Sec::C($_REQUEST['end']);
			if($end <= 0){
				$end = 0;
			}
		}else{
			$end = 0;
		}
		
		switch($_REQUEST['met']){
			case "contact":
				if($sememo == NULL){
					self::errp("不能查询这个关键字！-错误<br>"); // 查询错误
				}
				$clcond = "`contact` LIKE  '%".$sememo."%'";
				break;
			case "memo":
				if($sememo == NULL){
					self::errp("不能查询这个关键字！-错误<br>"); // 查询错误
				}
				$clcond = "`memo` LIKE  '%".$sememo."%'";
				break;
			case "na":
				if($sememo == NULL){
					self::errp("不能查询这个关键字！-错误<br>"); // 查询错误
				}
				$clcond = "`name` LIKE  '%".$sememo."%'";
				break;
			case "et":
				$clcond = "`ettime` > $st AND `ettime` < $end";
				break;
			case "rel":
				$clcond = "`relation` > $st AND `relation` < $end";
				break;
			case "list":
			default:
				$end = $st + 30;
				$clcond = " id > 0 LIMIT ".$st." , ".$end;
				break;			
		}
		
		$usb = new DB_Act("S","*","skyline_custom",$clcond);	
		if($usb->status != DB_Mod::$C_TRUE){
			// 出错误了
			self::errp("找不到客户！-错误<br>".base64_encode(json_encode($usb))); // 查询错误
		}else if($usb->get == NULL){
			self::errp("找不到客户-首项为空！<br>".base64_encode(json_encode($usb))); // 查询错误
		}
		
		$list = self::getSearch($usb);
		require_once("acts/show_result.html");
		show_custom_result($list);
		return true;
	}
	
	public static function getSearch($usb){
		$sum=array();
		$row = $usb->get;
		$now = new CustomInfo();
		$now->GLA($row);
  		$sum[] = $now;
  	
		while($row = mysqli_fetch_array($usb->cd))
  		{
			$now = new CustomInfo();
			$now->GLA($row);
			$sum[] = $now;
  		}
  		return $sum;		
	}
	
	public static function suuc($si,$pe){
		require_once("leave_answer.php");
		$retn = "您的$si已经记录！".
		"<br><span style=\"color:#f33\"> 您的$si代码:".($pe)."<br></span>";
		leave_answ("<h3>$si已提交</h3>",$retn);
		die();
	}
	
	public static function js_suc($si){
		require_once("leave_answer.php");
		leave_answ("保存成功","客户记录成功：".$si);
		die();
	}
	
	public static function errp($si){
		require_once("leave_answer.php");
		leave_answ("保存不成功","客户未保存：".$si);
		die();
	}
	
	
}

