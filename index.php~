// 程序结束

function getRefresh($usb){
		$sum = new Teach_Info();
		$row = $usb->get;
	if($row == NULL){
		//错误	
		Mod_Authorize::errp("刷新错误","存在错误的教师信息");
	}
	$now = new Teacher_A($row);
  	$sum->add($now);
	while($row = mysqli_fetch_array($usb->cd))
  	{
  		if($row == NULL){
			//错误	
				Mod_Authorize::errp("刷新错误","存在错误的教师信息	");
			}
  		$now = new Teacher_A($row);
  		$sum->add($now);
  	}
  	$ans = $sum->save();
  	
	if(isset($_REQUEST['mafa']) && $_REQUEST['mafa'] == 4){
		if(strpos($_SESSION['priv'],"ranp") === FALSE){
				Mod_Authorize::errp("刷新错误","您没有权限执行密码刷新操作。");
		}
		$ids = 	Sec::C($_REQUEST['ids']);
		$ide = Sec::C($_REQUEST['ide']);
		if($ids <= 0 || $ide <= 0){
				Mod_Authorize::errp("刷新错误","用户ID上限、下限设置不正确(ids,ide)");
		}
		for($i = 0; $i<count($sum->l); $i++){
		       $kty = new BPUB();
		       $ni = $sum->l[$i]->i;
		       if($ni < $ids || $ni > $ide){
		       		continue;
		       }
		       $anp = $kty->G_ID($ni);
		       if($kty->shift_user->exist != true){
		       	  Mod_Authorize::errp("刷新错误","获取用户失败！".print_r($i));   
		       }
		       $pow = rand(100000,999999);
		       echo $sum->l[$i]->i." ".$sum->l[$i]->n." ".$pow."<br>";
		       $anp = $kty->S("pss",base64_encode($pow));
		       if($anp != BPUB::$C_OK){
		       	  Mod_Authorize::errp("刷新错误","更新密码失败！".print_r($kty));    
		       }
		}
		die();
	}
	
	if(isset($_REQUEST['mafa']) && $_REQUEST['mafa'] == 5){
		for($i = 0; $i<count($sum->l);$i++){
		       $kty = new BPUB();
		       $anp = $kty->G_ID($sum->l[$i]->i);
		       if($kty->shift_user->exist != true){
		       	  Mod_Authorize::errp("刷新错误","获取权限失败！".print_r($i));   
		       }
		       // 修改 priv
		       $priv = $kty->shift_user->priv;
		       if(strpos($priv,"leader") !== FALSE && strpos($priv,"elder") === FALSE){
		       		$priv .= ",elder";
		       }
		       echo $sum->l[$i]->i." ".$sum->l[$i]->n." ".$priv."<br>";
		       $anp = $kty->S("priv",$priv);
		       if($anp != BPUB::$C_OK){
		       	  Mod_Authorize::errp("刷新错误","更新权限失败！".print_r($kty));    
		       }
		}
		die();
	}
	
  	if($ans == false || $ans <=  0){
  		Mod_Authorize::errp("刷新错误","保存失败！");
  	}
  	return $sum;
}

function recieveFile(){
	$DESTINATION = '/tmp'; // No trailing slash
	$FILE_SIZE = 30 * 1000 * 1000;
	$hasFile = false;
	$uploadOk = false;

	if (isset($_FILES['file']['name'])) {
		$hasFile = true;
		$tmpname = $_FILES['file']['tmp_name'];
		$filename = $_FILES['file']['name'];
		$uploadOk = false;

		if ($_FILES['file']['size'] <= $FILE_SIZE) {
			$uploadOk = move_uploaded_file(
				$tmpname,
				$DESTINATION . "/{$filename}"
			);
		}
	}
	return array($hasFile,$uploadOk);
}

function getTeach(){
	if($_REQUEST['cast'] == "me"){
		$t = $_SESSION['uid'];
	}else{
		$t = Sec::C($_REQUEST['a']);	
	}
	//$tei = new Teach_Info();
	$bub = new BPUB();
	$bub->G_ID($t);
	if(false == $bub->shift_user->exist){
		Mod_Authorize::errp("订户不存在！","订户信息打开失败！");
	}
	//print_r($tei->l);
	$an = $bub->shift_user->name;
	$ar = $bub->shift_user->title;
	$p = $bub->shift_user->phone;
	$ot = $bub->shift_user->otell;
	$memo = $bub->shift_user->memo;
	if($an == NULL || $an == FALSE){
	}else{
		Mod_Authorize::errp("<h1>".$an."</h1>","<h3>大名 : ".$an.
		"<br> 身份：".$ar.
		"<br> 联系方式：".$p.
		"<br> QQ：".$ot."".
		"<br> 备注：".$memo."</br>".
		"</h3>");
	}	
	Mod_Authorize::errp("用户不存在！","用户信息不能检索！");
	
}

function Global_Main(){
	EC::A();
	if(!isset($_REQUEST['goto'])){
		require_once("index_home.html");	
	}else{
	
		$g = $_REQUEST['goto'];	
		if($g == "logout"){
			unset($_SESSION);
			session_destroy();
			header("Location: login.html");
			die();
		}
		
		require_once("index_info.php");
		if($g == "leave"){
			showModuleLeave();
		}else if($g == "always"){
			Global_None();
		}else if($g == "elder"){
			starter();
			if(strpos($_SESSION['priv'],"elder") == FALSE){
				Mod_Authorize::errp("往期查询权限不足！<br>请联系管理查询！"); // 查询错误
			}
			Mod_Search::show();
			ender();
		}else if($g == "auth"){
			starter();
			Mod_Search::show();
			ender();
		}else if($g == "addcustom"){
			starter();
			Mod_Custom::showCustomAdd();
			ender();	
		}else if($g == "findcustom"){
			starter();
			Mod_Custom::showCustomPanel();
			ender();	
		}else if($g == "comm"){
			starter();
			Mod_Report::showComPanel();
			ender();
		}else if($g == "listcomm"){
			starter();
			Mod_Report::showSearchPanel();
			ender();
		}else{
			Global_None();
		}
	}	
	die();
}


