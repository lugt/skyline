	public static function Save_Det(){
		if(strpos($_SESSION['priv'],"communicate") === FALSE){
				// 错误，没有权限
			self::errp("您的权限不足！<br>".base64_encode(json_encode($_SESSION))); // 权限没有
		}		
		$det = $_REQUEST['det'];
		if($det == 'report'){
			
		}else if($det == 'event'){
			
		}else if($det == 'custom'){
			
		}else if($det == ''){
			
		}else{
			
		}
	}
	
	public static function Save_Communicate(){
		if(strpos($_SESSION['priv'],"communicate") === FALSE){
				// 错误，没有权限
		//	self::errp("您的权限不足！<br>".base64_encode(json_encode($_SESSION))); // 权限没有
		}		
		
		$lfo = Mod_Custom::Get_CustomId();
		
		if($lfo != NULL){
			$usb = self::DB_report($lfo);
		}else{
			self::js_errp("您输入的客户不能被正确识别."); // 分析数据错误	
		}	
		// usb 是数组 0 是DB_Act 1 是 time()/sa********.txt  2 是 file表里的 id
		if(is_array($usb)){
			if($usb[0]->status == DB_Mod::$C_TRUE){
				self::js_suuc(array($usb[0]->get,$usb[1],$usb[2]));
			}else{
				self::js_errp("无法保存Report信息".base64_encode(json_encode($usb)));
			}	
		}else{
			$kkk = "保存Report到数据库错误"; // blob 的错误	
			self::js_errp("无法记录<br>".$kkk ."<br>". base64_encode(json_encode($usb))); // 数据库错误
		}
	}
	
	public static function React_Det(){
		// 创建一个新cURL资源
		$ch = curl_init();

		// 设置URL和相应的选项
		curl_setopt($ch, CURLOPT_URL, "http://www.tuling123.com/openapi/api");
		curl_setopt($ch, CURLOPT_POST,true);
		curl_setopt($ch, CURLOPT_RETURNTRANSFER,true);
		curl_setopt($ch, CURLOPT_HEADER, 0);
		curl_setopt($ch,CURLOPT_CONNECTTIMEOUT,30);
		curl_setopt($ch,CURLOPT_POSTFIELDS, http_build_query($post));

		// 抓取URL并把它传递给浏览器
		$retn = curl_exec($ch);
		// 关闭cURL资源，并且释放系统资源
		curl_close($ch);		
		if($retn !== FALSE){
			// 成功
			self::js_errp("智能识别:" . $retn);
		}else{
			self::js_errp("智能识别返回错误");
		}
	}

	public static function suuc($si,$pe){
		require_once("leave_answer.php");
		$retn = "您的$si已经记录！".
		"<br><span style=\"color:#f33\"> 您的$si代码:".($pe)."<br></span>";
		leave_answ("<h3>$si已提交</h3>",$retn);
		die();
	}
	
	public static function js_suuc($si){
		$retn = json_encode(array("success",$si));
		die($retn);
	}
	
	public static function js_errp($si){
		$retn = json_encode(array("fail",$si));
		die($retn);
	}
	
	public static function errp($si){
		require_once("leave_answer.php");
		leave_answ("记录不成功","日志记录不成功：".$si);
		die();
	}
	
	public static function DB_report($cus){
		//FL
		require_once("index_report.php"); // 失败请求恢复
		
		$sm = new FileBean();
		$tiu = time();
		if(!isset($_FILES['imp'])){
			self::js_errp("没有文件出现");
		}
		$fs = $_FILES['imp'];
		if($fs['error'] == 0 || $fs['error'] == '0'){
			move_uploaded_file($fs['tmp_name'],"data/sa".$tiu.".txt");	
		}else{
			self::js_errp("上传文件有错误".json_encode($fs));
		}
		
		$usb = $sm->insertBlob("data/sa".$tiu.".txt","octet/report",$tiu);
		
		if($usb == true){
			$aid = $sm->pdo->lastInsertId(); 
		}else{
			self::js_errp("文件入s_file失败");
		}
		
		$sql = "(`id`, `editor`, `report`, `custom`, `comdate`, `state`, `unit`)";
		$val = "(NULL, '". $_SESSION['uid'] ."','$aid', '$cus->id', '$tiu', '1000', '1')";
		$usd = new DB_Act("I",$val,"skyline_comm",$sql);	
		return array($usd,$tiu,$aid);
	}
	
	public static function GetReport(){
		
		$clcond = " id  > 0 ";
		$lfo = Mod_Custom::Get_CustomId();
		if($lfo != NULL){
			// 有
			$clcond .= " AND custom = ". $lfo->id ." ";
		}		
		
		$usb = new DB_Act("S","*","skyline_comm",$clcond);	
		if($usb->status != DB_Mod::$C_TRUE){
			// 出错误了
			self::errp("找不到记录！-错误<br>".base64_encode(json_encode($usb))); // 查询错误
		}else if($usb->get == NULL){
			self::errp("找不到记录-首项为空！<br>".base64_encode(json_encode($usb))); // 查询错误
		}
		
		$list = self::getRepoSearch($usb);
		require_once("acts/show_reports.html");
		show_report_result($list);
		return true;
	}
				
	public static function getRepoSearch($usb){
			$sum=array();
			$row = $usb->get;
			$now = new ReportInfo();
			$now->GLA($row);
			$sum[] = $now;

			while($row = mysqli_fetch_array($usb->cd))
			{
				$now = new ReportInfo();
				$now->GLA($row);
				$sum[] = $now;
			}
			return $sum;		
	}
	
	public static function deliverReport(){
		$repoId = Sec::C($_REQUEST['repo']);
		if($repoId > 0 && $repoId < 999999999){
			$rpt = new ReportInfo();
			$rpt->get_id($repoId);
			// get 到 rpt, 获取blob
			if($rpt->id <= 0){
				self::errp("找不到记录-请重新选择记录ID！<br>".base64_encode(json_encode($usb)));
			}
			require_once("index_report.php"); // 失败请求恢复
			require_once("acts/com_deliver.html");
			require_once("index_info.php");
			starter();
			show_report_deliver($rpt);
			ender();
		}else{
			self::errp("找不到记录-请重新选择记录ID！<br>".base64_encode(json_encode($usb))); // 查询错
		}
	}
	
}
 

class ReportInfo{
	public $id;
	public $editor;
	public $report;
	public $custom;
	public $dates;
	public $state;
	public $unit;
	
	public function get_id($lid){
		$usb = new DB_Act("S","*","skyline_comm","`id` = ".$lid."  ");		
		if($usb->status == DB_Mod::$C_TRUE){
			// 成功
			if($usb->get == NULL || $usb->get == false){
				// 失败了	
				return false;
			}else{
				return $this->GLA($usb->get);
			}
		}else{
			// 不成功
			return false;
		}
	}
	
	public function set($a,$b){
		EC::A();
		$usb = new DB_Act("U"," `".$a."` =  ".$b." ","skyline_comm"," `id` = ".$this->id);
		if($usb->status == DB_Mod::$C_TRUE){
			// 成功	
			return true;
		}else{
			return false;	
		}
	}
	
	public function GLA($row){
		
		if(!isset($row) || !is_array($row)){
				return false;
			}
			
		if(!isset($row['id']) || !isset($row['editor']) ||
		!isset($row['report']) || !isset($row['custom']) || !isset($row['comdate']) ||!isset($row['state'])||!isset($row['unit'])){
				return false;
		}
			
  		$this->id =  $row['id'];
  		$this->editor =  $row['editor'];
  		$this->report =  $row['report'];
  		$this->custom =  $row['custom'];
		$this->dates =  $row['comdate'];
		$this->state =  $row['state'];
		$this->unit = $row['unit'];
		
		return true;
	}
}


// 权限管理：
// 特定教师拥有审核权利，
// 全部教师拥有请假权利，包括学生
// 

// 管理员（后台全部模块可以使用）


class Mod_Leave{
	public static $ENC = "EXTERMINEsx02-3-4-#*($(&&(--2@##V";
	public static function show(){
		require_once("index_leave.html");
	}
	
	public static function doLeave(){
		// 检验权限
		if(strpos($_SESSION['priv'],"leave") === FALSE){
				// 错误，没有权限
			self::errp("您的权限不足！".print_r($_SESSION)); // 权限没有
		}		
		
		$lfo = self::Get_Req();
		if($lfo != NULL){
			$usb = self::DB_leave($lfo);
		}else{
			self::errp("您的输入不能被正确识别."); // 分析数据错误	
		}	
		
		if($usb->status == DB_Mod::$C_TRUE){
			self::suuc($lfo->lid,$usb->get);
		}else{
			if(is_array($usb->get)){
				$kkk = $usb->get[0] . "<br>" . base64_encode($usb->get[1]);
			}else{
				$kkk = "暂无";	
			}
			self::errp("您的输入无法记录，请检查<br>检查帮助代码:".$kkk); // 数据库错误
		}
	}
	
	public static function suuc($si,$pe){
		require_once("leave_answer.php");
		$retn = "您的预约已经记录，将会尽快确认！".
		"<br><span style=\"color:#f33\"> 您的预约代码:".($pe)."<br><span style=\"color:#ccc\">申请编号:SQ".$si."</span>";
		leave_answ("<h3>预约已提交</h3>",$retn);
		die();
	}
	
	public static function errp($si){
		require_once("leave_answer.php");
		leave_answ("预约不成功","您的预约不成功：".$si);
		die();
	}
	
	public static function Get_Req(){
		
		if(!isset($_REQUEST['na']) || !isset($_REQUEST['cl1']) || 
		!isset($_REQUEST['cl2']) || !isset($_REQUEST['st']) || 
		!isset($_REQUEST['en']) || !isset($_REQUEST['re']) || 
		!isset($_REQUEST['po']) ){
			self::errp("您输入的信息不完整");
		}
		
		$na = Sec::NS($_REQUEST['na']); // Names
		$cl1 = Sec::C($_REQUEST['cl1']); // Classes
		$cl2 = Sec::C($_REQUEST['cl2']); // Classes
		$st = Sec::C($_REQUEST['st']); // Start Time
		$en = Sec::C($_REQUEST['en']); // Ending 
		$ty = 1; // type 类型，现在默认都是 1
		$re = Sec::NS($_REQUEST['re']); // Reason （缘由）
		$ap = $_SESSION['uid']; // Applicant (JSON) 
		$at = time();	
		$po = Sec::NS($_REQUEST['po']); // Position (位置)
		$me = Sec::NS($_REQUEST['me']); // Memo (备注)
		
		$cl = $cl1*10 + $cl2;
		
		if($na != NULL && $cl > 0 && $st > 0 && 
		$en > 0 && $ty > 0 && $re != NULL && $ap != NULL && $po != NULL){
			// DO NOTHING	
		}else{
			self::errp("信息不完整<br>有格式不正确的信息");	 // 信息不完整
		}
		
		$leaveId = date("YmdHis");
			
		$now = new LeaveInfo();
		
		$now->na =  $na;
  	$now->cl =  $cl;
  	
  	$now->st =  strtotime($st);
  	
  	//
  	// 判断en
  	switch($en){
  		case 1:
 		  	$now->st = strtotime("13:00",$now->st);
 		  	break;
  		case 2:
  			$now->st = strtotime("18:40",$now->st);
  			break;
  		case 3:
  			$now->st = strtotime("10:00",$now->st);	
  			break;
  		default:
  			$now->st = strtotime("00:01",$now->st);
  	}
  	  	
  	$now->en =  strtotime("23:59",$now->st);
  	$now->re =  $re;
  	$now->me =  $me;
  	$now->ty =  $ty;
  	$now->sa =  100; // 状态 : 创建
  	$now->po =  $po;
  	$now->ap =  $ap;
  	$now->at =  $at;
  	$now->ex =  0;
  	$now->et =  0;
  	$now->fi =  0;
  	$now->ft =  0;
  	$now->lid = $leaveId;
		return $now;
	}
	
	public static function DB_leave($lfo){
		 $echos = "(NULL, '".$lfo->na."', ".$lfo->cl.", ".
			$lfo->st.", ".
			$lfo->en.", ".
			$lfo->ty.", ".
			$lfo->sa.", '".
			$lfo->re."', '".
			$lfo->po."', ".
			$lfo->ap.", ".
			$lfo->at.", ".
			$lfo->ex.", ".
			$lfo->et.", ".
			$lfo->fi.", ".
			$lfo->ft.", '".
			$lfo->me."', ".
			$lfo->lid.")";
			
			$sty = " (`id`, `name`, `class`, `start`, `end`, `type`, `state`, `reason`, `pos`, `apply`, `aptime`, `exam`, `extime`, `fire`, `fitime`, `memo`, `lid`)";
			$usb = new DB_Act("I",$echos,"skyline_res",$sty);	
			return $usb;
	}
}

class Mod_Search{
	
	public static function suuc($si){
		require_once("act/search_result.html");
		search_answer($si);
		die();
	}
	
	public static function errp($si){
		require_once("leave_answer.php");
		leave_answ("搜索失败",$si);
		die();
	}
	
	public static function range_search(){
		
		if(isset($_REQUEST['class'])){
			$class = Sec::C($_REQUEST['class']);
		}else{
			$class = 9999;
		}
		if(!isset($_REQUEST['time'])){
			$time = 1;
		}else{
			$time = Sec::C($_REQUEST['time']);
		}
		
		$GLOBALS['class'] = $class;
		$GLOBALS['time'] = $time;
		
		switch($class){
			case 1:
			 	// 高中
			 	$clcond = "`class` > 10  ";
			 	break;
			case 2:
			  // 高一
			 	$clcond = "`class` > 10 AND `class` < 50  ";
			 	break;
			case 3:
			  // 高二
			 	$clcond = "`class` > 20 AND `class` < 60  ";
			 	break;
			case 4:
			  // 高三
			 	$clcond = "`class` > 30 AND `class` < 70  ";
			 	break;
			case 5:
			  // 初yi
			 	$clcond = "`class` > 40 AND `class` < 20  ";
			 	break;
			case 6:
			  // 初er
			 	$clcond = "`class` > 20 AND `class` < 30  ";
			 	break;
			case 7:
			  // 初三
			 	$clcond = "`class` > 30 AND `class` < 40  ";
			 	break;
			case 9:
			  // 初zhong
			 	$clcond = "`class` > 10 AND `class` < 40  ";
			 	break;
			default:	
			  // 全校		
			 $clcond = "`class` >  0 ";
		}
		
		switch($time){
			
			case 1:
			  // 今明
			 	$stc = "`start` > ".strtotime("today 00:00")." AND `start` < ".strtotime("tomorrow 23:59");
			 	break;
			
			case 2:
			  // 今
			 	$stc = "`start` > ".strtotime("today 00:00")." AND `start` < ".strtotime("today 23:59");
			 	break; 	
			
			case 3:
			  // 明日
			 	$stc = "`start` > ".strtotime("tomorrow 00:00")." AND `start` < ".strtotime("tomorrow 23:59");
			 	break;	 	
			 	
		  case 5:
			  // 昨日
			 	$stc = "`start` > ".strtotime("yesterday 00:00")." AND `start` < ".strtotime("yesterday 23:59");
			 	break;	
		
			case 4:
			 	// 本周
			 	$stc = "`start` > ".strtotime("next Monday -1 week 00:00") . " AND `start` < ".strtotime("next Monday 00:00");
			 	break;
			
			case 11:
			 	// 本周
			 	$stc = "`start` > ".strtotime("last month") . " AND `start` < ".strtotime("next Monday 00:00");
			 	break;
			 
			case 12:
			 	// 本周
			 	$stc = "`start` > ".strtotime("-3 month") . " AND `start` < ".strtotime("next Monday 00:00");
			 	break;
			
			case 19:
			 	// 本周
			 	$stc = "`start` > ".strtotime("-1 year") . " AND `start` < ".strtotime("next Monday 00:00");
			 	break;
			 	
			default:	
			  // 前后三天
			  $stc = "`start` > ".strtotime("-3 day 00:00")." AND `start` < ".strtotime("+3 day 23:59");
		}
				
		// Range
		// 分析范围
		// 选定班级
		// 选定时间
		if(!isset($_REQUEST['pls']) || $_REQUEST['pls'] != "elder"){
			$usb = new DB_Act("S","*","skyline_res",$clcond ."  AND  ". $stc);
		}else{
			if(strpos($_SESSION['priv'],"elder") !== FALSE){
				$usb = new DB_Act("S","*","skyline_res_back",$clcond ."  AND  ". $stc);
			}else{
				self::errp("往期查询权限不足！<br>请联系管理查询！"); // 查询错误
			}
		}
		
		if($usb->status != DB_Mod::$C_TRUE){
			// 出错误了
			self::errp("找不到预约！"); // 查询错误
		}else if($usb->get == NULL){
			self::errp("找不到预约！"); // 查询错误
		}
		// 存在结果			
		$answer = self::getSearch($usb);
		if($answer != null && count($answer) > 0){
			// 返回结果正确
			self::suuc($answer);
		}else{
			self::errp("出现问题");
		}
	}
	
	
	public static function getSearch($usb){
		$sum=array();
		$row = $usb->get;
		$now = LeaveInfo::GLF($row);
  		$sum[] = $now;
  	
		while($row = mysqli_fetch_array($usb->cd))
  	{
  		$now = LeaveInfo::GLF($row);
  		$sum[] = $now;
  	}
  	return $sum;		
	}
	
	
	public static function show(){
	  require_once("act/search_panel.html");
	}
	
	
}

// 核心 Bean
class LeaveInfo{
	public $na;
	public $cl;
	
	public $st = 0;
	public $en = 0;
	
	public $ty = 0;
	public $re;
	public $po;
		
	public $ap = 0;
	public $at = 0;
	
	public $ex = 0;
	public $et = 0;
	
	public $me;	
	public $sa = 0;
	
	public $fi = 0;
	
	public $ft = 0;
	public $id = 0;
	
	public $lid = 0;
	
	public function __construct(){
	}
	
	public function get_id($lid){
		$usb = new DB_Act("S","*","skyline_res","`id` = ".$lid."  ");		
		if($usb->status == DB_Mod::$C_TRUE){
			// 成功
			if($usb->get == NULL || $usb->get == false){
				// 失败了	
				return false;
			}else{
				return $this->GLA($usb->get);
			}
		}else{
			// 不成功
			return false;
		}
	}
	
	public function get_lid($lid){
		$usb = new DB_Act("S","*","skyline_res","`lid` = ".$lid."  ");		
		if($usb->status == DB_Mod::$C_TRUE){
			// 成功	
			if($usb->get == NULL || $usb->get == false){
				// 失败了	
				return false;
			}else{
				return $this->get_from($usb->get);
			}
		}else if(is_array($usb->status)){
			// 成功
			if($usb->get == NULL || $usb->get == false){
				// 失败了	
				return false;
			}else{
				return $this->get_from($usb->get);
			}
		}else{
			// 不成功
			return false;
		}
	}
	
	public function set($a,$b){
		EC::A();
		$usb = new DB_Act("U"," `".$a."` =  ".$b." ","skyline_res"," `id` = ".$this->id);
		if($usb->status == DB_Mod::$C_TRUE){
			// 成功	
			return true;
		}else{
			return false;	
		}
	}
		
	public static function GLF($row){
			$now = new LeaveInfo();
  		$now->na =  $row['name'];
  		$now->cl =  $row['class'];
  		
  		$now->st =  $row['start'];
  		$now->en =  $row['end'];
  		  		
  		$now->re =  $row['reason'];
  		$now->me =  $row['memo'];
  		
  		$now->ty =  $row['type'];
  		$now->sa =  $row['state']; // 状态 
  		$now->po =  $row['pos'];
  		
  		$now->ap =  $row['apply']; // 人 
  		$now->at =  $row['aptime']; 
  		
  		$now->ex =  $row['exam'];  // 人
  		$now->et =  $row['extime'];
  		
  		$now->fi =  $row['fire'];  // 人 
  		$now->ft =  $row['fitime']; 
  		
  		$now->id = $row['id'];
  		$now->lid = $row['lid'];
  		
  		// 添加队列
  		return $now;
		
	}
	
	public function GLA($row){
		
			if(!isset($row) || !is_array($row)){
				return false;
			}
			
			if(!isset($row['name']) || !isset($row['class']) ||
		!isset($row['start']) || !isset($row['end']) || !isset($row['reason']) || 
			!isset($row['memo']) || !isset($row['type']) || !isset($row['lid']) ||
			!isset($row['state']) || !isset($row['pos']) || !isset($row['apply']) || 
			!isset($row['aptime']) || !isset($row['exam']) || !isset($row['extime']) ||
			!isset($row['fire']) || !isset($row['fitime']) || !isset($row['id']) ){
				return false;
			}
			
  		$this->na =  $row['name'];
  		$this->cl =  $row['class'];
  		
  		$this->st =  $row['start'];
  		$this->en =  $row['end'];
  		  		
  		$this->re =  $row['reason'];
  		$this->me =  $row['memo'];
  		
  		$this->ty =  $row['type'];
  		$this->sa =  $row['state']; // 状态 
  		$this->po =  $row['pos'];
  		
  		$this->ap =  $row['apply']; // 人 
  		$this->at =  $row['aptime']; 
  		
  		$this->ex =  $row['exam'];  // 人
  		$this->et =  $row['extime'];
  		
  		$this->fi =  $row['fire'];  // 人 
  		$this->ft =  $row['fitime']; 
  		
  		$this->id = $row['id'];
  		$this->lid = $row['lid'];
  		
  		// 添加队列
  		return true;
		
	}
}

class Mod_Authorize{
	public static function doAct(){
		if(!isset($_REQUEST['a']) || $_REQUEST['a'] != "d"){
			self::Get_Req();
		}else{
			self::Get_De();	
		}
	}
	
	public static function Get_De(){
		EC::R();
		$re = $_REQUEST['leave'];
		session_start();
		EC::A();
		$pe = $_SESSION['uid'];
		$re = Sec::C($re);
		if($re < 0){
			self::errp("审核无效","您的操作不合规。");
		}
		$lfo = new LeaveInfo();
		if(true == $lfo->get_id($re)){
			// 成功找到	对应的请假条，
			if($lfo->ex != $_SESSION['uid']  ||  strpos($_SESSION['priv'],"deauth") === false || strpos($_SESSION['priv'],"admin") === FALSE){
					//没有权利取消
				self::errp("审核无效","权限不足：您不能做此操作。");
			}
			$ans = $lfo->set("exam",0);
			if($ans != true){
				// 写入出错
				self::errp("审核无效","记录失败：审核内容错误。");
			}
			$ans = $lfo->set("extime",0);
			if($ans != true){
				self::errp("审核无效","记录失败：审核时间不合规。");
			}
			
			$ans = $lfo->set("state",100);
			if($ans != true){
				self::errp("审核无效","记录失败：状态不符合要求。");
			}
			$lfo->ex = 0;
			$lfo->et = 0;
			self::errp("审核成功","审核信息已取消，<br>已经取消，您可以再次申请审核");
		}else{
			self::errp("审核无效","很抱歉，没有这张预约。");
		}
	}
	
	public static function Get_Req(){
		EC::R();
		if(!isset($_REQUEST['leave'])){
			self::errp("审核无效","没有选定请假单");
		}
		$re = $_REQUEST['leave'];
		session_start();
		EC::A();
		$pe = $_SESSION['uid'];
		if(strpos($_SESSION['priv'],"xauth") === false){
					//没有权利取消
				self::errp("审核无效","权限不足：您不能做此操作。");
		}
		$re = Sec::C($re);
		if($re <= 2 || $re > 10000000){
			self::errp("审核无效","您的操作ID不合规。");
		}
		$lfo = new LeaveInfo();
		if(true == $lfo->get_id($re)){
			// 成功找到	对应的请假条，
			$ans = $lfo->set("exam",$_SESSION['uid']);
			if($ans != true){
				// 写入出错
				self::errp("审核无效","记录失败：输入不合规。");
			}
			$ty = time();
			$ans = $lfo->set("extime",$ty);
			if($ans != true){
				self::errp("审核无效","记录失败：输入不符合要求。");
			}
			$ans = $lfo->set("state",300);
			if($ans != true){
				self::errp("审核无效","记录失败：输入不达到要求。");
			}
			$lfo->ex = $re;
			$lfo->et = $ty;
			self::errp("<span style=\"color:#383;\">审核成功</span>","审核信息已记录。");
		}else{
			self::errp("审核无效","很抱歉，没有这张预约条。");
		}
	}
	
	public static function errp($ino,$inf){
		require_once("leave_answer.php");
		leave_answ($ino,$inf);
		die();
	}
	
	public static function detail(){
		
		if(!isset($_REQUEST['leave'])){
			self::errp("检索失败","没有选定预约单");
		}
		$re = $_REQUEST['leave'];
		$re = Sec::C($re);
		if($re <= 2 || $re > 100000){
			self::errp("检索失败","您的操作ID不合规。");
		}
		$lfo = new LeaveInfo();
		if(true == $lfo->get_id($re)){
			
   			require_once("index_info.php");
			require_once("act/auth_detail.php");
			auth_detail($lfo);
		}else{
			self::errp("检索失败","很抱歉，找不到指定预约。");
		}
	}
	
	
	
}
